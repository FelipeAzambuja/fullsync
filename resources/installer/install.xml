<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE installation SYSTEM "resources/installer/installation.dtd">

<installation version="1.0">
	<info>
		<appname>FullSync</appname>
		<appversion>0.8</appversion>
		<authors>
			<author name="Jan Kopcsek" email="codewright@gmx.de"/>
			<author name="Michele Aiello" email="aiello@infinito.it"/>
			<author name="Norbert Kopcsek" email="rayhawk@gmx.de"/>
		</authors>
		<url>http://fullsync.sourceforge.net/</url>
	</info>

	<guiprefs width="640" height="480" resizable="no">
    	<laf name="liquid">
        	<os family="unix"/>
        	<param name="decorate.frames" value="yes"/>
        	<param name="decorate.dialogs" value="yes"/>
    	</laf>
	</guiprefs>

	<locale>
		<langpack iso3="eng"/>
	</locale>

	<resources>
		<res id="LicencePanel.licence" src="LICENSE"/>
		<!--<res id="InfoPanel.info" src="RELEASE NOTES" parse="no" type="plain"/>-->
        <res id="shortcutSpec.xml" src="resources/installer/shortcut.xml"/>
        <res id="Installer.image" src="resources/installer/installbox.png"/>
	</resources>

    <native type="izpack" name="ShellLink.dll"/>

	<panels>
		<panel classname="HelloPanel"/>
		<!--<panel classname="InfoPanel"/>-->
		<panel classname="LicencePanel"/>
		<panel classname="TargetPanel"/>
		<panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
		<panel classname="SimpleFinishPanel"/>
	</panels>

	<packs>
		<pack name="FullSync" required="yes">
			<description>FullSync</description>

            <fileset dir="build/lib" targetdir="$INSTALL_PATH/lib">
				<include name="j2ssh-core.jar"/>
				<include name="jakarta-oro-2.0.7.jar"/>		
				<include name="commons-cli-1.0.jar"/>
				<include name="commons-configuration-1.0.jar"/>
				<include name="commons-logging.jar"/>
				<include name="commons-net-1.2.2.jar"/>
				<include name="xercesImpl.jar"/>
				<include name="xml-apis.jar"/>
				<include name="log4j-1.2.8.jar"/>
				<include name="fullsync.jar"/>
				<include name="utils.jar"/>
            </fileset>

			<!-- SWT Win32 -->
			<file src="resources/swt-win32/swt.jar" targetdir="$INSTALL_PATH/lib" os="windows"/>
            <file src="resources/swt-win32/swt-awt-win32-3063.dll" targetdir="$INSTALL_PATH/" os="windows"/>
            <file src="resources/swt-win32/swt-win32-3063.dll" targetdir="$INSTALL_PATH/" os="windows"/>

			<!-- SWT Linux GTK -->
			<file src="resources/swt-linux-gtk/swt.jar" targetdir="$INSTALL_PATH/lib" os="unix"/>
			<file src="resources/swt-linux-gtk/swt-pi.jar" targetdir="$INSTALL_PATH/lib" os="unix"/>
			<file src="resources/swt-linux-gtk/libswt-atk-gtk-3063.so" targetdir="$INSTALL_PATH/lib" os="unix"/>
			<file src="resources/swt-linux-gtk/libswt-awt-gtk-3063.so" targetdir="$INSTALL_PATH/lib" os="unix"/>
			<file src="resources/swt-linux-gtk/libswt-gnome-gtk-3063.so" targetdir="$INSTALL_PATH/lib" os="unix"/>
			<file src="resources/swt-linux-gtk/libswt-gtk-3063.so" targetdir="$INSTALL_PATH/lib" os="unix"/>
			<file src="resources/swt-linux-gtk/libswt-pi-gtk-3063.so" targetdir="$INSTALL_PATH/lib" os="unix"/>

            <fileset dir="images" targetdir="$INSTALL_PATH/images" override="true">
                <exclude name="**/CVS"/>
            </fileset>

			<fileset dir="build/docs/manual" targetdir="$INSTALL_PATH/docs/manual" override="true"/>

			<!-- EXE for Win32 -->
            <file src="build/FullSync.exe" targetdir="$INSTALL_PATH/" os="windows"/>
            <file src="build/FullSync.exe.manifest" targetdir="$INSTALL_PATH/" os="windows"/>
			
			<!-- EXE for Linux -->
			<file src="resources/bin/fullsync.sh" targetdir="$INSTALL_PATH/bin" os="unix"/>
            <executable targetfile="$INSTALL_PATH/bin/fullsync.sh" stage="never" type="bin"/>
            
            <file src="build/sample.syncrules" targetdir="$INSTALL_PATH/"/>
            <file src="build/logging.xml" targetdir="$INSTALL_PATH/"/>
			<file src="build/CHANGELOG" targetdir="$INSTALL_PATH/"/>
			<file src="build/LICENSE" targetdir="$INSTALL_PATH/"/>

            <fileset dir="resources/installer/logs" targetdir="$INSTALL_PATH/logs" override="false">
                <exclude name="**/CVS"/>
                <include name="readme.txt"/>
            </fileset>

        </pack>

	</packs>

</installation>
