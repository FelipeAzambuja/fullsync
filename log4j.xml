<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="FullSyncAppender" class="org.apache.log4j.ConsoleAppender">
		<!--param name="File" value="logs/fullsync.log" />	-->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} [%-5p] %-65c %x - %m%n"/>
		</layout>
	</appender>
	<appender name="FullSyncInternalAppender" class="org.apache.log4j.ConsoleAppender">
		<!--param name="File" value="logs/fullsync.internal.log" />	-->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} [%-5p] %-65c %x - %m%n"/>
		</layout>
	</appender>

	<appender name="Ssh" class="org.apache.log4j.ConsoleAppender">
		<!--param name="File" value="logs/ssh.log" />-->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} [%-5p] %-65c %x - %m%n"/>
		</layout>
	</appender>
	
	<appender name="error" class="org.apache.log4j.ConsoleAppender">
		<!--param name="File" value="logs/error.log" />-->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} [%-5p] %-65c %x - %m%n"/>
		</layout>
	</appender>

	<appender name="org.mockftpserver.fake.FakeFtpServer" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} [%-5p] %-65c %x - %m%n"/>
		</layout>
	</appender>

	<logger name="com.sshtools.j2ssh" additivity="false">
		<level value="WARN"/>
		<appender-ref ref="Ssh"/> 
	</logger>
	
	<logger name="net.sourceforge.fullsync" additivity="false">
		<level value="DEBUG"/>
		<appender-ref ref="FullSyncInternalAppender"/> 
	</logger>

	<logger name="FullSync" additivity="false">
		<level value="INFO"/>
		<appender-ref ref="FullSyncAppender"/> 
	</logger>
	
	<logger name="FakeFtpServer" additivity="false">
		<level value="ALL"/>
		<appender-ref ref="org.mockftpserver.fake.FakeFtpServer"/> 
	</logger>
	
	<root>
		<priority value="ALL"/>
		<appender-ref ref="error"/>
	</root>
	
</log4j:configuration>
